pipeline {
    agent { label 'Jenkins-Agent' }
    tools {
        jdk 'Java17'
        maven 'Maven3.9.9'
    }	
    environment {
	    APP_NAME = "register-app-pipeline"
            RELEASE = "1.0.0"
            DOCKER_USER = "atangoinfotech"
            DOCKER_PASS = 'dockerhub'
            IMAGE_NAME = "${DOCKER_USER}" + "/" + "${APP_NAME}"
            IMAGE_TAG = "${RELEASE}-${BUILD_NUMBER}"
	    JENKINS_API_TOKEN = credentials("dockerhub-token")
    }  
    stages{
        stage("1.Cleanup Workspace"){
                steps {
                cleanWs()
                }
        }

        stage("2.Checkout from SCM"){
                steps {
                    git branch: 'main', credentialsId: 'github', url: 'https://github.com/AtangaEmma/register-app.git'
                }
        }

        stage("3.Build Application"){
            steps {
                sh "mvn clean package"
            }

       }

       stage("4.Test Application"){
           steps {
                 sh "mvn test"
           }
       }
